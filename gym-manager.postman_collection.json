{
  "info": {
    "name": "Gym Manager API - Auto Variables",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Postman collection with automatic variable updating for Auth Tokens and IDs"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Send OTP",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"phoneNumber\": \"<phone_number>\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/send-otp",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "send-otp"]
            }
          }
        },
        {
          "name": "Verify OTP",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Login successful\", function() {",
                  "    pm.response.to.have.status(200);",
                  "    const jsonData = pm.response.json();",
                  "    ",
                  "    // Check for success",
                  "    pm.expect(jsonData.success).to.be.true;",
                  "    ",
                  "    // CAPTURE AUTH TOKEN",
                  "    if(jsonData.data && jsonData.data.token) {",
                  "        pm.collectionVariables.set(\"authToken\", jsonData.data.token);",
                  "        console.log(\"✓ Auth Token updated automatically\");",
                  "    } else {",
                  "        console.error(\"Token not found in response\");",
                  "    }",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"phoneNumber\": \"<phone_number>\",\n  \"otp\": \"<otp>\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/verify-otp",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "verify-otp"]
            }
          }
        }
      ]
    },
    {
      "name": "Gym",
      "item": [
        {
          "name": "Create Gym",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Gym Created\", function() {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData.success).to.be.true;",
                  "    ",
                  "    // CAPTURE GYM ID",
                  "    if(jsonData.data && jsonData.data.id) {",
                  "        pm.collectionVariables.set(\"gymId\", jsonData.data.id);",
                  "        console.log(\"✓ Gym ID updated: \" + jsonData.data.id);",
                  "    }",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"My Gym\",\n  \"address\": \"123 Main St\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/gym",
              "host": ["{{baseUrl}}"],
              "path": ["gym"]
            }
          }
        },
        {
          "name": "Update Gym",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Updated Gym\",\n  \"address\": \"456 New St\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/gym/:id",
              "host": ["{{baseUrl}}"],
              "path": ["gym", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "{{gymId}}"
                }
              ]
            }
          }
        },
        {
          "name": "Get My Owned Gyms",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Get My Gyms\", function() {",
                  "    const jsonData = pm.response.json();",
                  "    ",
                  "    // AUTOMATICALLY SELECT FIRST GYM IF AVAILABLE",
                  "    if(jsonData.success && jsonData.data && jsonData.data.length > 0) {",
                  "        const firstGymId = jsonData.data[0].id;",
                  "        pm.collectionVariables.set(\"gymId\", firstGymId);",
                  "        console.log(\"✓ Gym ID set to existing gym: \" + firstGymId);",
                  "    }",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/gym/me/owned",
              "host": ["{{baseUrl}}"],
              "path": ["gym", "me", "owned"]
            }
          }
        },
        {
          "name": "Get Gym By ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/gym/:id",
              "host": ["{{baseUrl}}"],
              "path": ["gym", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "{{gymId}}"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Plans",
      "item": [
        {
          "name": "Create Plan",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test(\"Create plan successful\", function() {",
                  "    pm.response.to.have.status(201);",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData.success).to.be.true;",
                  "    ",
                  "    // CAPTURE PLAN ID",
                  "    pm.collectionVariables.set('planId', jsonData.data.id);",
                  "    console.log('✓ Plan created and ID saved:', jsonData.data.id);",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Monthly\",\n  \"description\": \"Access for one month\",\n  \"durationInMonths\": 1,\n  \"price\": 1000,\n  \"gymId\": \"{{gymId}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/plans",
              "host": ["{{baseUrl}}"],
              "path": ["plans"]
            }
          }
        },
        {
          "name": "Get All Plans for Gym",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/plans?gymId={{gymId}}",
              "host": ["{{baseUrl}}"],
              "path": ["plans"],
              "query": [
                { "key": "gymId", "value": "{{gymId}}" }
              ]
            }
          }
        },
        {
          "name": "Update Plan",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Updated Plan\",\n  \"description\": \"Updated description\",\n  \"durationInMonths\": 3,\n  \"price\": 2500,\n  \"isActive\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/plans/{{planId}}",
              "host": ["{{baseUrl}}"],
              "path": ["plans", "{{planId}}"]
            }
          }
        },
        {
          "name": "Delete Plan",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/plans/{{planId}}",
              "host": ["{{baseUrl}}"],
              "path": ["plans", "{{planId}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Subscriptions",
      "item": [
        {
          "name": "Subscribe to Plan",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test(\"Subscribe successful\", function() {",
                  "    pm.response.to.have.status(201);",
                  "    const jsonData = pm.response.json();",
                  "    ",
                  "    // CAPTURE SUBSCRIPTION ID",
                  "    pm.collectionVariables.set('subscriptionId', jsonData.data.id);",
                  "    console.log('✓ Subscription ID saved:', jsonData.data.id);",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"planId\": \"{{planId}}\",\n  \"gymId\": \"{{gymId}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/subscriptions/subscribe",
              "host": ["{{baseUrl}}"],
              "path": ["api", "subscriptions", "subscribe"]
            }
          }
        },
        {
          "name": "Get My Subscriptions",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test(\"Get subscriptions\", function() {",
                  "    const jsonData = pm.response.json();",
                  "    if (jsonData.data && jsonData.data.length > 0) {",
                  "        pm.collectionVariables.set('subscriptionId', jsonData.data[0].id);",
                  "        console.log('✓ Subscription ID refreshed:', jsonData.data[0].id);",
                  "    }",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/subscriptions/me",
              "host": ["{{baseUrl}}"],
              "path": ["api", "subscriptions", "me"]
            }
          }
        }
      ]
    },
    {
      "name": "Payments",
      "item": [
        {
          "name": "Process Payment",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test(\"Payment successful\", function() {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData.success).to.be.true;",
                  "    ",
                  "    // CAPTURE PAYMENT ID",
                  "    pm.collectionVariables.set('paymentId', jsonData.data.id);",
                  "    console.log('✓ Payment ID saved:', jsonData.data.id);",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"method\": \"CARD\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/payments/:subscriptionId/process",
              "host": ["{{baseUrl}}"],
              "path": ["api", "payments", ":subscriptionId", "process"],
              "variable": [
                {
                  "key": "subscriptionId",
                  "value": "{{subscriptionId}}"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Attendance",
      "item": [
        {
          "name": "Check In",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test(\"Check-in successful\", function() {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData.success).to.be.true;",
                  "    ",
                  "    // CAPTURE ATTENDANCE ID",
                  "    pm.collectionVariables.set('attendanceId', jsonData.data.id);",
                  "    console.log('✓ Attendance ID saved:', jsonData.data.id);",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/attendance/gym/:gymId/check-in",
              "host": ["{{baseUrl}}"],
              "path": ["api", "attendance", "gym", ":gymId", "check-in"],
              "variable": [
                {
                  "key": "gymId",
                  "value": "{{gymId}}"
                }
              ]
            }
          }
        },
        {
          "name": "Check Out",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/attendance/:attendanceId/check-out",
              "host": ["{{baseUrl}}"],
              "path": ["api", "attendance", ":attendanceId", "check-out"],
              "variable": [
                {
                  "key": "attendanceId",
                  "value": "{{attendanceId}}"
                }
              ]
            }
          }
        }
      ]
    }
  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Pre-request global check",
          "const authToken = pm.collectionVariables.get('authToken');",
          "if (!authToken && !pm.info.requestName.includes('OTP')) {",
          "    console.warn('⚠️ No auth token set. Run Auth > Verify OTP first.');",
          "}"
        ]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Global JSON check",
          "pm.test(\"Response is JSON\", function() {",
          "    pm.response.to.have.header('Content-Type');",
          "    pm.expect(pm.response.headers.get('Content-Type')).to.include('application/json');",
          "});"
        ]
      }
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "authToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "gymId",
      "value": "",
      "type": "string"
    },
    {
      "key": "planId",
      "value": "",
      "type": "string"
    },
    {
      "key": "subscriptionId",
      "value": "",
      "type": "string"
    },
    {
      "key": "paymentId",
      "value": "",
      "type": "string"
    },
    {
      "key": "attendanceId",
      "value": "",
      "type": "string"
    }
  ]
}